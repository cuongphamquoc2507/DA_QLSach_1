@model DA_QLSach.Areas.Admin.Data.TaiKhoan

@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Phạm Quốc Cường - SB Admin</title>
    <link href="~/Areas/Asset/css/styles.css" rel="stylesheet" />

    <script src="~/Areas/Asset/js/all.min.js"></script>

</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header" align="center">
                                    <a>

                                        <img src="~/Areas/Asset/images/icon.png" width=100 />
                                    </a>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                                    {@Html.AntiForgeryToken()
                                    <form>
                                        <div class="form-group">
                                            Tên đăng nhập
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            Mật khẩu
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            Phân quyền
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.PhanQuyen, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.PhanQuyen, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">

                                            @Html.ActionLink("Quay lại", "login")
                                            <input type="submit" value="Đăng kí" class="btn btn-primary" />

                                        </div>
                                        <div>

                                        </div>

                                    </form>
                                }
                                </div>


                            </div>

                            <div>


                            </div>

                        </div>

                    </div>

                </div>

            </main>

        </div>

        <div id="layoutAuthentication_footer">

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Phạm Quốc Cường - 2021</div>

                    </div>
                </div>
            </footer>
        </div>
    </div>

</body>
</html>
<script src="js/jquery-3.5.1.min.js"></script>
<script src="js/bootstrap.bundle.min.js"></script>
<script src="js/scripts.js"></script>
