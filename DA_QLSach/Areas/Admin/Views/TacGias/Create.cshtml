@model DA_QLSach.Areas.Admin.Data.TacGia

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}



@using (Html.BeginForm("Create", "TacGias", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 align="center">
            Thêm mới
        </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TenTG, "Tên tác giả", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" align="center">
                @Html.EditorFor(model => model.TenTG, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" align="center">
            @Html.LabelFor(model => model.Anh, "Ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <img id="output" class="img-rounded" alt="Ảnh" width="180" height="200" src="~/Areas/Asset/images/no-image-news.png" />
                <p><label for="ufile" style="cursor:  pointer;">Chọn  file  ảnh</label></p>
                <input name="ImageFile" id="ufile" type="file" style="display:  none;" onchange="loadFile(event)" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ngaysinh, "Ngày sinh", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" align="center">
                @Html.EditorFor(model => model.Ngaysinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ngaysinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quequan, "Quê quán", htmlAttributes: new { @class = "control -label col-md-2" })
            <div class="col-md-10" align="center">
                @Html.EditorFor(model => model.Quequan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quequan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tieusu, "Tiểu sử", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" align="center">
                @Html.EditorFor(model => model.Tieusu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tieusu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" align="center">
            <div class="col-md-offset-2 col-md-10">
                <i class="fas fa-user-plus"></i>  <input type="submit" value="Tạo" class="btn btn-default" />| <a href="@Url.Action("Index","TACGIAs")" class="btn btn-link" role="button"><i class="fas fa-undo mr-1"></i>Hủy bỏ</a>
            </div>
        </div>
    </div>}

@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>