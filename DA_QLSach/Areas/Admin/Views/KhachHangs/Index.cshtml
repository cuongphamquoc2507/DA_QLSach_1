@model IEnumerable<DA_QLSach.Areas.Admin.Data.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<p>THÔNG TIN KHÁCH HÀNG</p>
<table class="table">
    <tr>
        <th>
            Tên khách hàng
        </th>
        <th>
           Email
        </th>
        <th>
           Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Mật khẩu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatKhau)
        </td>
        <td>
          
            @Html.ActionLink("Chi tiết", "Details", new { id=item.IDKhachHang }) |
            @*@Html.ActionLink("Xóa", "Delete", new { id=item.IDKhachHang })*@
        </td>
    </tr>
}

</table>
